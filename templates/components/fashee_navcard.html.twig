<!-- Header cart noti -->
<div class="header-cart header-dropdown">


    {% if app.session.get("panier") | length > 0 %}

	    <ul class="header-cart-wrapitem">
		     
			 {% for item in app.session.get("panier")  %}
		
				<li class="header-cart-item ">
					<div class="header-cart-item-img">
						<img src=" {{ asset( item.produit.photo.first().images )  }} " alt="IMG">
					</div>

					<div class="header-cart-item-txt">
						<a href="#" class="header-cart-item-name">
							{{ item.produit.nom   }}
						</a>

						<span class="header-cart-item-info">
						{{ item.quantite }}	 x  {{ item.produit.prix }} FCFA
						</span>
					</div>
				</li>
			 {% endfor %}
		</ul>

		<div class="header-cart-total">
			<strong>Total:  {{app.session.get("total")}} FCFA </strong>
		</div>

		<div class="header-cart-buttons">
			<div class="header-cart-wrapbtn">
				<!-- Button -->
				<a href=" {{  path('app_cart') }} " class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
					Panier
				</a>
			</div>

			<div
				class="header-cart-wrapbtn">
				<!-- Button -->
				<a href=" {{ path('app_checkout') }} " class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
					Caisse
				</a>
			</div>
		</div>

		
	{% else %}
	  <div class="row mx-auto">
			Votre panier est vide 
	  </div>
	{% endif %}



</div>


